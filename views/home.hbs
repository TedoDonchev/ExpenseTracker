<main>

    {{#if error}}
    <section class="notifications">
        <p class="notification-message">{{error.message}}</p>
    </section>
    {{/if}}
    {{#if isAuth}}
    <main>

        <section class="actions">
            <form action="/auth/refill" method="POST">
                <h2>Salary time? Refill your account amount.</h2>
                <input type="text" id="refill-amount" name="addAmount">
                <button type="submit" href="/auth/refill">Refill</button>
            </form>
            <div>
                <h2>New expense comming up?</h2>
                <a href="/expense/create">Add it now</a>
            </div>
        </section>

        <hr class="separator">

        {{#unless expenses}}
            <h1 class="no-expenses">No expenses founded so far.. <span>GOOD JOB!</span></h1>    
        {{else}}
        <table class="expenses">
            <thead>
                <tr>
                    <th>Merchant</th>
                    <th>Amount</th>
                    <th>Category</th>
                    <th>Description</th>
                </tr>

            </thead>
            <tbody>
                
                {{#each expenses}}
                    {{>expense}}
                {{/each}}
            
            </tbody>
        </table>
        {{/unless}}

    </main>


    {{else}}
        <p class="guest-message">MoneyGone? The best expense tracker tool of all time!<br>–êre you new here? 
        <a href="/auth/register">Register</a> yourself!</p>
    {{/if}}
</main>